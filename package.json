{
    "scripts": {
        "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
        "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
        "test": "ts-mocha -p ./tsconfig.json -t 1000000 tests/logic/index.ts",
        "test:step1": "cross-env step=1 ts-node tests/logic/contract_actions.ts",
        "test:step2": "cross-env step=2 ts-node tests/logic/contract_actions.ts",
        "test:step3": "cross-env step=3 ts-node tests/logic/contract_actions.ts",
        "test:step4": "cross-env step=4 ts-node tests/logic/contract_actions.ts",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "build:tests": "tsc tests/logic/*.ts --outDir ./dist/tests",
        "compile:actions": "tsc tests/logic/contract_actions.ts --outDir ./dist"
    },
    "dependencies": {
        "@coral-xyz/anchor": "0.29.0",
        "@metaplex-foundation/js": "^0.20.1",
        "@solana/spl-token": "0.4.9",
        "@solana/wallet-adapter-base": "^0.9.5",
        "@solana/web3.js": "^1.91.2",
        "borsh": "^0.7.0",
        "bs58": "^5.0.0",
        "decimal.js": "^10.3.1",
        "fs": "^0.0.1-security",
        "tweetnacl": "^1.0.3"
    },
    "devDependencies": {
        "@types/bn.js": "^5.1.0",
        "@types/chai": "5.0.1",
        "@types/mocha": "10.0.10",
        "chai": "4.3.4",
        "cross-env": "^7.0.3",
        "mocha": "11.0.2",
        "prettier": "3.4.2",
        "ts-mocha": "10.0.0",
        "typescript": "5.7.2"
    }
}